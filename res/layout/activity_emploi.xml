<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanc_casse" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:elevation="20dp" >

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/blanc_casse"
            android:orientation="vertical"
            android:elevation="20dp" >

            <EditText
                android:id="@+id/nom_enfant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="Prénom de l&apos;enfant"
                android:inputType="textCapWords"
                android:singleLine="true" />

            <TextView
                style="@style/wrapped"
                android:layout_marginTop="20dp"
                android:text="Activités :"
                android:textColor="@color/noir"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/liste_activite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                style="@style/wrapped"
                android:layout_marginTop="20dp"
                android:text="Heures à marquer :"
                android:textColor="@color/noir"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/liste_heure_marques"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
            </LinearLayout>

            <EditText
                android:id="@+id/edit_heure_marque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tapez une heure, (ex: 11h30)"
                android:singleLine="true" />

            <Button
                android:id="@+id/ajouter_heure_marque"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter l&apos;heure à marquer" />

            <Button
                android:id="@+id/valide_enfant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="VALIDER LA FRISE" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@color/blanc_casse"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/nom_activite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="Nom de l&apos;activité"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <EditText
            android:id="@+id/description_activite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="Description de l&apos;activité"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <EditText
            android:id="@+id/debut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="Heure de début (ex: 13h30)"
            android:singleLine="true" />

        <EditText
            android:id="@+id/fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="Heure de fin (ex: 15h)"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrapped"
                android:text="Image choisie :"
                android:textColor="@color/noir"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_choisie"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/image_dejeuner" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <ImageButton
                android:id="@+id/dejeuner"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/dejeuner" />

            <ImageButton
                android:id="@+id/bob"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_toEndOf="@id/dejeuner"
                android:background="@drawable/bob" />

            <ImageButton
                android:id="@+id/cours"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_toEndOf="@id/bob"
                android:background="@drawable/cours" />

            <ImageButton
                android:id="@+id/dodo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_toEndOf="@id/cours"
                android:background="@drawable/dodo" />

            <ImageButton
                android:id="@+id/jeu"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_toRightOf="@id/dodo"
                android:background="@drawable/jeu" />

            <ImageButton
                android:id="@+id/maison"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_toEndOf="@id/jeu"
                android:background="@drawable/maison" />

            <ImageButton
                android:id="@+id/recre"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/dejeuner"
                android:background="@drawable/recre" />

            <Button
                android:id="@+id/autre"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/dodo"
                android:layout_toEndOf="@id/recre"
                android:background="@color/blanc_casse"
                android:text=" ... "
                android:textSize="60sp" />
        </RelativeLayout>

                <Button
            android:id="@+id/changer_couleur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Choisir une couleur" />
        
        <Button
            android:id="@+id/ajouter_activite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ajouter une activité" />
        
        <Button
            android:id="@+id/modifier_activite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Valider modifications"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>