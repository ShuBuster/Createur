<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="translucide">
        <item name="android:background">@color/translucide</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@style/lightTextShadow">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/yellow4</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
    </style>

    <style name="topPannel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blanc_casse</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="bottomPannel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/blanc_casse</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textShadow" parent="@style/wrapped">
        <item name="android:shadowColor">@color/noir</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">7</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="lightTextShadow" parent="@style/wrapped">
        <item name="android:shadowColor">@color/noir</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>